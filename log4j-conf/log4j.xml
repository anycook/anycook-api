<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration>
  
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c: %m%n"/> 
    </layout> 
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
    <param name="LevelMin" value="ERROR" />
    <param name="LevelMax" value="FATAL" />
  </filter>
  </appender>

 
  <!-- Appender fÃ¼r dieselbe Ausgabe via email -->
  <appender name="mail" class="org.apache.log4j.net.SMTPAppender">
    <param name="SMTPHost" value="smtp.anycook.de" />
    <param name="SMTPUsername" value="no-reply@anycook.de" />
    <param name="SMTPPassword" value="wd+liwd3"/>
    <param name="To" value="admin@anycook.de" />
    <param name="From" value="no-reply@anycook.de" />
    <param name="Subject" value="[ERROR] anycook.de" />
    <param name="BufferSize" value="1" />
    <param name="threshold" value="error" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern"
        value="%d{ISO8601} %-5p [%t] %c: %m%n" />
    </layout>
    <filter class="org.apache.log4j.varia.LevelRangeFilter">
    <param name="LevelMin" value="error" />
    <param name="LevelMax" value="fatal" />
  </filter>
  </appender>
  
  <!-- GraphApi Logging -->
  <appender name="GRAPH-DaRoPi" class="org.apache.log4j.DailyRollingFileAppender">
  <param name="File"  value="/var/www/sites/anycook.de/log/graph-test.log" />
  <param name="Append" value="true" />
  <param name="DatePattern"  value="'.'yyyy-MM" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c: %m%n" />
    </layout>
  </appender>
  
   <!-- GraphApi Logging -->
  <appender name="snapshot-DaRoPi" class="org.apache.log4j.DailyRollingFileAppender">
  <param name="File"  value="/var/www/sites/anycook.de/log/snapshot.log" />
  <param name="Append" value="true" />
  <param name="DatePattern"  value="'.'yyyy-MM" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] %c: %m%n" />
    </layout>
  </appender>
  
  
  <logger name="de.anycook">
  	<level value="DEBUG" />
  	<appender-ref ref="GRAPH-DaRoPi" />
    <appender-ref ref="mail" />
   </logger>
   
   <logger name="de.anycook.snapshot">
  	<level value="DEBUG" />
  	<appender-ref ref="snapshot-DaRoPi" />
   </logger>
   
  <root> 
    <priority value="DEBUG" /> 
    <appender-ref ref="console" />    
  </root> 
  
</log4j:configuration>
	
