<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"> 
  <display-name>anycook-graph</display-name>
  <filter>
    <filter-name>JerseyBackend</filter-name>
    <filter-class>com.sun.jersey.spi.container.servlet.ServletContainer</filter-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>de.anycook.graph;de.anycook.graph.filter</param-value>
    </init-param>
    <init-param>
      <param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
      <param-value>de.anycook.graph.filter.OAuthAuthenticationFilter</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>JerseyBackend</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <session-config>
    <cookie-config>
      <domain>.anycook.de</domain>
      <path>/</path>
    </cookie-config>
  </session-config>
</web-app>